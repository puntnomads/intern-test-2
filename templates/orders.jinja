{% extends 'base.jinja' %}

{% block main %}
<table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Buyer's Name</th>
        <th>Amount Bought</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      {% for order in orders %}
          <tr>
            <td>{{ order['order_id'] }}</td>
            <td>{{ order['buyer'] }}</td>
            <td>{{ order['amount_bought'] }}</td>
            <td>{{ order['created'] }}</td>
          </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}